{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "baseUrl": "./",
  },
  "paths": {
    "@packages/*": [
      "./packages/*"
    ],
    "@apps/*": [
      "./applications/*"
    ]
  },
  "exclude": [
    "./build",
    "./dist"
  ]
}
